def dica(numeroEscolhido: int):
    print("Escolhido", numeroEscolhido, "Secreto", numeroSecreto)
    if numeroEsolhido > numeroSecreto:
        return "O numero escolhido e Maior que o numero secreto", numeroEscolhido
    else:
        return "o numero escolhido e Menor que o numero secreto", numeroEscolhido

